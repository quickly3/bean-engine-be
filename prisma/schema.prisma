generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  schemas  = ["public"]
}

model BiliUps {
  id              Int       @id @default(autoincrement())
  mid             BigInt?   @db.BigInt
  attribute       Int       @default(0)
  mtime           BigInt    @db.BigInt
  tag             Int[]     @default([])
  special         Int       @default(0)
  uname           String
  face            String
  sign            String
  face_nft        Int       @default(0)
  handle          String?
  name_render     Json?     @db.Json
  contract_info   Json?     @db.Json
  official_verify Json?     @db.Json
  nft_icon        String?   @default("")
  rec_reason      String?   @default("")
  track_id        String?   @default("")
  follow_time     String?   @default("")
  following       BigInt?   @default(0) @db.BigInt
  follower        BigInt?   @default(0) @db.BigInt
  likes           BigInt?   @default(0) @db.BigInt
  view            BigInt?   @default(0) @db.BigInt
  totalVideos     Int?      @default(0)
  crawlStatus     String?   @default("pending")
  createdAt       DateTime? @default(now())
  updatedAt       DateTime? @default(now()) @updatedAt

  @@index([mid])
  @@schema("public")
}

model BiliVideos {
  id           Int      @id @default(autoincrement())
  title        String?
  subtitle     String?
  description  String?
  tname        String?
  tname_v2     String?
  comment      Int?
  typeid       Int?
  play         Int?
  pic          String?
  copyright    String?
  review       Int?
  author       String?
  mid          BigInt   @db.BigInt
  created      Int?
  length       String?
  video_review Int?
  aid          BigInt?
  bvid         String?
  season_id    Int?
  danmaku      Int?     @default(0)
  favorite     Int?     @default(0)
  coin         Int?     @default(0)
  share        Int?     @default(0)
  now_rank     Int?     @default(0)
  his_rank     Int?     @default(0)
  like         BigInt?  @default(0) @db.BigInt
  dislike      Int?     @default(0)
  evaluation   String?  @default("")
  vt           Int?     @default(0)
  viewseo      BigInt?  @default(0) @db.BigInt
  state        String?  @default("init")
  createdAt    DateTime @default(now())
  updatedAt    DateTime @default(now()) @updatedAt

  @@index([mid])
  @@index([bvid])
  @@index([aid])
  @@schema("public")
}

model VideoHonors {
  id                   Int      @id @default(autoincrement())
  mid                  BigInt   @db.BigInt
  bvid                 String?
  aid                  BigInt   @db.BigInt
  type                 Int?
  desc                 String?
  weekly_recommend_num Int?
  createdAt            DateTime @default(now())
  updatedAt            DateTime @default(now()) @updatedAt

  @@index([mid])
  @@index([bvid])
  @@index([aid])
  @@schema("public")
}

model BiliUpAnalysis {
  id      Int     @id @default(autoincrement())
  mid     BigInt? @db.BigInt
  type    String?
  content String?

  @@index([mid])
  @@schema("public")
}
